<% content_for :page_title do %>
  <%= plural_resource_name(Spree::AssetViewType) %>
<% end %>

<% content_for :page_actions do %>
  <%= button_link_to Spree.t(:new_asset_view_type), new_object_url, class: "btn-success", icon: 'add' %>
<% end if can? :create, Spree::AssetViewType %>

<% if @asset_view_types.any? %>
  <table class="table">
    <thead>
      <tr data-hook="categories_header">
        <th><%= Spree.t(:name) %></th>
        <th class="actions"></th>
      </tr>
    </thead>
    <tbody>
      <% @asset_view_types.each do |asset_view_type|%>
      <tr id="<%= spree_dom_id asset_view_type %>" data-hook="category_row">
        <td><%= asset_view_type.name %></td>
        <td class="actions actions-2 text-right">
          <%= link_to_edit(asset_view_type, no_text: true) if can? :edit, asset_view_type %>
          <%= link_to_delete(asset_view_type, no_text: true) if can? :edit, asset_view_type %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <div class="alert alert-info no-objects-found">
    <%= Spree.t(:no_resource_found, resource: plural_resource_name(Spree::AssetViewType)) %>,
    <%= link_to(Spree.t(:add_one), new_object_url) if can? :create, Spree::AssetViewType %>!
  </div>
<% end %>
