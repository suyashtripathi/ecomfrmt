<div data-hook="admin_message_category_form_fields">
  <div data-hook="name" class="form-group">
    <%= f.field_container :name, class: ["form-group"] do %>
      <%= f.label :name, Spree.t(:name) %><br>
      <%= f.text_field :name, class: 'form-control' %>
      <%= f.error_message_on :name %>
    <% end %>
  </div>
  <div data-hook="admin_message_category_form_is_visible">
      <%= f.field_container :is_visible, class: ['form-group'] do %>
        <%= f.label :is_visible, Spree.t(:is_visible) %>
        <%= f.error_message_on :is_visible %>
        <%= f.check_box :is_visible %>
      <% end %>
    </div>
</div>
