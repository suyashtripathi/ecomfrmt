<% content_for :page_title do %>
  <%= link_to Spree.t(:product_categories), spree.admin_product_categories_url %> /
  <%= Spree.t(:new_product_category) %>
<% end %>

<%= render partial: 'spree/admin/shared/error_messages', locals: { target: @product_category } %>

<%= form_for [:admin, @product_category] do |f| %>
  <fieldset>
    <%= render partial: 'form', locals: { f: f } %>
    <%= render partial: 'spree/admin/shared/new_resource_links' %>
  </fieldset>
<% end %>
