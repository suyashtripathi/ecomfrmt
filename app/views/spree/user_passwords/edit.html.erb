<%= render :partial => 'spree/shared/error_messages', :locals => { :target => @spree_user } %>
<!-- Hero Section-->
<section class="hero">
  <div class="container">
    <!-- Hero Content-->
    <div class="hero-content text-center">
      <h1 class="hero-heading text-capitalize thin-weight"><%= Spree.t(:change_your_password) %></h1>
      <!--<div class="row">
        <div class="col-xl-8 offset-xl-2"><p class="lead text-muted"><%= Spree.t(:instructions_to_reset_password) %></p></div>
      </div>-->
    </div>
  </div>
</section>
<section>
  <div class="container">
    <div class="row">
      <div class="col-lg-8 col-xl-9">
        <div class="block mb-5">
          <div class="block-header"><strong class="text-uppercase">Enter your new password</strong></div>
          <div class="block-body">
            <div class="panel-body">
              <%= form_for @spree_user, :as => :spree_user, :url => spree.update_password_path, :method => :put do |f| %>
                <div class="form-group">
                  <%= f.label :password, Spree.t(:password) %>
                  <%= f.password_field :password, :class => "form-control", required: true %>
                </div>
                <div class="form-group">
                  <%= f.label :password_confirmation, Spree.t(:confirm_password) %>
                  <%= f.password_field :password_confirmation, :class => "form-control", required: true %>
                </div>
                <%= f.hidden_field :reset_password_token %>
                <%= f.submit Spree.t(:update), :class => 'btn btn-theme mt-4' %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
