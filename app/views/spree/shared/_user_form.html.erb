<fieldset id="password-credentials">
  <div class="form-group">
    <%= f.text_field :firstname, :class => 'form-control', :placeholder => Spree.t(:firstname), required: true %>
  </div>
  <div class="form-group">
    <%= f.text_field :lastname, :class => 'form-control', :placeholder => Spree.t(:lastname), required: true %>
  </div>
  <div class="form-group">
    <%=# f.label :email, Spree.t(:email), class: 'required', title: 'required'
    %>
    <%= f.email_field :email, :class => 'form-control', :placeholder => Spree.t(:email), required: true %>
  </div>
  <div class="form-group">
    <%=# f.label :password, Spree.t(:password), class: 'required', title: 'required'
    %>
    <%= f.password_field :password, :class => 'form-control', :placeholder => Spree.t(:password), required: true %>
  </div>
  <div class="form-group">
    <%=# f.label :password_confirmation, Spree.t(:password_confirmation), class: 'required', title: 'required'
    %>
    <%= f.password_field :password_confirmation, :class => 'form-control', :placeholder => Spree.t(:confirm_password), required: true %>
  </div>
  <div class="form-group">
    <%= f.text_field :mobile_num, :class => 'form-control', :placeholder => Spree.t(:mobile_num) %>
  </div>
</fieldset>
<div data-hook="signup_below_password_fields"></div>
