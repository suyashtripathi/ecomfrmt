<%= form_tag spree.populate_orders_path(@order), :method => "post" do %>
  <div id="inside-product-cart-form" data-hook="inside_product_cart_form" itemprop="offers" itemscope itemtype="https://schema.org/Offer">
    
    <%= hidden_field_tag "variant_id", @variant.id %>
    <%= hidden_field_tag "card_preview_id", @card_preview.id %>
    <%= hidden_field_tag "quantity", 1 %>
    
    <span class="input-group-btn">
      <%= button_tag class: 'btn btn-theme', id: 'add-to-cart-button', type: :submit do %>
        <%= Spree.t(:add_to_cart) %>
      <% end %>
    </span>
            
  </div>
<% end %>
